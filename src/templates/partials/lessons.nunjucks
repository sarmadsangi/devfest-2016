<h2 class="h1">What You'll Learn</h1>

{# Left / right / left right #}
<ul class="l-lessons Lessons">
  {% for lesson in lessons %}
  <li class="l-lesson Lesson">
    <div class="l-lesson__supporting Lesson__img">
      <img src="{{lesson.img}}" alt="">
    </div>
    <div class="l-lesson__main">
      <div class="Lesson__content">
        <h3 class="h3">{{lesson.title}}</h3>
        <p>{{lesson.desc | safe }}</p>
      </div>
    </div>
  </li>
  {% endfor %}
</ul>
